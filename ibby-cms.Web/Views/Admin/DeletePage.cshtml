@model ibby_cms.Models.PageContentViewModel

@{
    ViewBag.Title = "DeletePage";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";

}

<h3>Вы уверены что хотите удалить страницу?</h3>

@using (@Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="col-md-10">
            @Html.ActionLink("Вернуться назад", "ManagementPage", "Admin")
            <input type="submit" value="Удалить страницу" class="btn btn-primary" />
        </div>
    </div>
}

<br /><br /><hr />

<div class="container">
    <h1>@Html.DisplayFor(model => model.Header)</h1>

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="form-horizontal">
                    <p>@Html.Raw(Model.Content)</p>
                </div>
            </div>
        </div>
    </div>
</div>
