@{
    ViewBag.Title = "Администрирование";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Администрирование </h2>
    </div>
</div>

<br />

<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-th-large fa-4x fa-fw"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">Управление страницами</div>
                        <br />
                    </div>
                    <div class="col-xs-12 text-left">Создавай, редактируй и публикуй свои страницы</div>
                </div>
            </div>
            <a href="@Url.Action("ManagementPage", "Admin")" title="Перейти к управлению страницами">
                <div class="panel-footer">
                    <span class="pull-left">Подробнее</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-th-list fa-4x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">Управление меню</div>
                        <br />
                    </div>
                    <div class="col-xs-12 text-left">Создавай, редактируй и управляй своим меню</div>
                </div>
            </div>
            <a href="@Url.Action("ManagementMenu", "Admin")">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-gear fa-4x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">Настройки профиля</div>
                        <br />
                    </div>
                    <div class="col-xs-12 text-left">Перейди в настройки своего профиля</div>
                </div>
            </div>
            <a href="@Url.Action("Index", "Manage")" title="Перейти к настройкам профиля">
                <div class="panel-footer">
                    <span class="pull-left">Подробнее</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-shopping-cart fa-4x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">Тестовый заголовок</div>
                        <br />
                    </div>
                    <div class="col-xs-12 text-left">тест тест тест тест тест тест тест тест тест</div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>

