@model ibby_cms.Models.MenuViewModel

@{
    ViewBag.Title = "Удалить меню";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";

}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Вы уверены что хотите удалить меню?</h2>
    </div>
</div>

@using (@Html.BeginForm()) {
    @Html.AntiForgeryToken()


    <div class="form-group">
        <div class="col-md-10">
            <input type="button" value="Вернуться назад" onclick="location.href='@Url.Action("ManagementMenu","Admin")';" class="btn btn-default" />
            <input type="submit" value="Удалить меню" class="btn btn-danger" />
        </div>
    </div>
}

<br /><br /><hr />

<div class="container">

    <table style="width: 100%" class="table table-striped table-bordered table-hover" id="dataTables-example">

        <thead>
            <tr>
                <th>Заголовок меню</th>
                <th>Код меню</th>
                <th>Элементы меню</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.TitleMenu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Code)
                </td>
                <td>
                    @if (Model.menuItems != null) {
                        foreach (var menuItem in Model.menuItems) {

                            <div> @Html.DisplayFor(modelItem => menuItem.TitleMenuItem)</div>

                        }
                    }
                </td>
        </tbody>
    </table>
</div>
