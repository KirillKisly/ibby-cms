@model ibby_cms.Models.MenuViewModel

@{
    ViewBag.Title = "Удалить меню";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";

}

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Вы уверены что хотите удалить меню?</h2>
    </div>
</div>

@using (@Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <input type="hidden" name="PageId" value="@Model.PageID" />

    <div class="form-group">
        <div class="col-md-10">
            <input type="button" value="Вернуться назад" onclick="location.href='@Url.Action("ManagementMenu","Admin")';" class="btn btn-default" />
            <input type="submit" value="Удалить меню" class="btn btn-danger" />
        </div>
    </div>
}

<br /><br /><hr />

<div class="container">
    <h1>@Html.DisplayFor(model => model.TitleMenu)</h1>

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="form-horizontal">
                    <h3>@Html.DisplayFor(model => model.TitleMenuItem)</h3>
                    @if (Model.Pages != null) {
                        <h3>@Html.DisplayFor(model => model.TitlePage)</h3>
                        <p>@Html.Raw(Model.Pages.HtmlContentModel.HtmlContent)</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
