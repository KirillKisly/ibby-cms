@model ibby_cms.Models.PageContentViewModel

@{
    ViewBag.Title = "Редактировать страницу";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}

<script src="~/CKEditor/ckeditor/ckeditor.js"></script>
<script src="~/CKEditor/ckfinder/ckfinder.js"></script>

<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Редактирование страницы</h2>
    </div>
</div>

<br />

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <input type="hidden" name="SeoId" value="@Model.SeoID" />
    <input type="hidden" name="HtmlContentID" value="@Model.HtmlContentID" />
    <input type="hidden" name="UniqueCode" value="@Model.UniqueCode" />

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

                <!-- Nav tabs -->
                <ul class="nav nav-tabs nav-justified">
                    <li class="active">
                        <a href="#mainTab" data-toggle="tab">Основное</a>
                    </li>
                    <li>
                        <a href="#seoTab" data-toggle="tab">SEO</a>
                    </li>

                </ul>

                <!-- Tab panels-->
                <div class="panel-body">
                    <div class="tab-content">

                        <!--Main tab-->
                        <div class="tab-pane fade in active col-lg-12" id="mainTab">
                            <br />
                            <div class="form-group col-md-12">
                                @Html.LabelFor(model => model.Header, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Header, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите заголовок" } })
                                    @Html.ValidationMessageFor(model => model.Header, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-md-12">
                                @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control", placeholder = "Введите URL" } })
                                    @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group col-md-12">
                                @Html.LabelFor(model => model.HtmlContent, htmlAttributes: new { @class = "control-label col-md-12" })
                                <div class="col-md-12">
                                    @Html.TextAreaFor(model => model.HtmlContent, new { @id = "FullContent", @class = "form-control", @rows = "200" })
                                    @Html.ValidationMessageFor(model => model.HtmlContent, "", new { @class = "text-danger" })
                                    <script>CKEDITOR.replace("FullContent");</script>
                                </div>
                            </div>

                        </div>

                        <!--SEO tab-->
                        <div class="tab-pane fade col-lg-12" id="seoTab">
                            <br />
                            <div class="form-group col-md-12">
                                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Название" } })
                                </div>
                            </div>

                            <div class="form-group col-md-12">
                                @Html.LabelFor(model => model.KeyWords, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.KeyWords, new { htmlAttributes = new { @class = "form-control", placeholder = "Ключевые слова" } })
                                </div>
                            </div>

                            <div class="form-group col-md-12">
                                @Html.LabelFor(model => model.Descriptions, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.Descriptions, new { @class = "form-control", @rows = "10", placeholder = "Описание..." })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Form buttons-->
    <div class="row">
        <div class="col-lg-12">
            <br />
            <div>
                <div class="col-md-6">
                    <input type="submit" value="Сохранить изменения" class="btn btn-primary btn-block" />
                </div>

                <div class="col-md-6">
                    <input type="button" value="Отмена" onclick="location.href='@Url.Action("ManagementPage","Admin")';" class="btn btn-danger btn-block" />
                </div>
            </div>
        </div>
    </div>
}

